<%- include ('templates/header'); -%> 

    <div id="header"></div>
    <div class="parallax" data-parallax="scroll" data-z-index="1" data-image-src="images/parallax/Flora & Fauna.jpg">
      <h3 class="para-header">Get in Touch</h3>
    </div>

    
    <div class="container" id="contactform">
        <div class="row">
            <div class="col-md-3 col-md-offset-3"></div>
            <div class="col-md-6 col-md-offset-6" id="form-background" style="background: rgb(252, 252, 252);"> 
                <h3>For  Info  About  Prints  or  Commissions</h3>
              <form  id="footer-form" action="/contact" method = "POST">
              
                <div class="form-group ">
                  <label for="exampleInputPassword1">Name</label>
                  <input type="name" class="form-control" id="name" placeholder="Enter Name"  name="conName" required minlength="6" maxlength="40">
                </div>
                
                <div class="form-group ">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" name="conEmail" required minlength="6" maxlength="40">
                </div>
                
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Leave a Message</label>
                  <textarea class="form-control" id="textarea" placeholder="Enter Message"  name="conMessage" rows="3" maxlength="200"></textarea>
                </div>
                <button type="submit" class="btn">Submit</button>
              </form></div>
            <div class="col-md-3 col-md-offset-3"></div>
  
  
        </div>
           
          </div>
   
  </main>
  <hr>
